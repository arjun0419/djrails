<h1 align="center">Driver </h1>

<p><%= link_to 'Add New Driver', new_driver_path %></p>

<table width="100%" border="1" >
  <tr >
    <th >First Name</th>
    <th>Last Name</th>
    <th>Languages Spoken</th>
    <th>Phone</th>
  </tr>
 
  <% @drivers.each do |driver| %>
    <tr align="center">
      <td><%= driver.firstName %></td>
      <td><%= driver.lastName %></td>
       <td><%= driver.city%></td>
        <td><%= driver.phone %></td>
      <td><%= link_to "edit", [:edit, painting]%></td>
    </tr>
  <% end %>
</table>
