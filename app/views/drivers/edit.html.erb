<h1> Edit Driver Information </h1>

<%= form_for @driver do |f| %>
<div>
	<%= f.label :firstName%>
	<%= f.text_field :firstName %>
</div>
<div>
	<%= f.label :lastName %>
	<%= f.text_field :lastName %>
</div>
<div>
	<%= f.label :city %>
	<%= f.text_field :city %>
</div>
<div>
	<%= f.label :phone %>
	<%= f.text_field :phone %>
</div>

<div>
 	<% @languages.each do |p| %>
    <%= f.radio_button :languages, p.id %>
    <%= f.label :languages, p.name %>
  <% end %>
</div>


<%= f.submit %>

<%end%>

<%= link_to 'Back', drivers_path %>